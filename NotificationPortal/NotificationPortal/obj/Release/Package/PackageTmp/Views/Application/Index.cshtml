@{
    ViewBag.Title = "Applications";
}

<h1 class="display-4 text-center pb-3">@ViewBag.Title</h1>

<ol class="breadcrumb bg-faded">
    <li class="breadcrumb-item"><a href="~/Home/Dashboard" class="link-color">Home</a></li>
    <li class="breadcrumb-item active">Applications</li>
</ol>

<div class="row">
    <div class="col-md-2">
        <p>
            @Html.ActionLink("Create New", "AddUser", null, new { @class = "btn btn-primary btn-lg" })
        </p>
    </div>
    <div class="offset-md-4 col-md-6">
        <div style="float: right">
            <form class="form-inline pb-3" method="get" action="~/">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" name="name" />
                <input class="btn btn-secondary" type="submit" value="Search" />
            </form>
        </div>
    </div>
</div>
<table class="table table-bordered">
    <tr class="bg-inverse text-white text-center">
        <th class="text-center">
            Application Name
        </th>
        <th class="text-center">
            Description
        </th>
        <th class="text-center">
            URL
        </th>
        <th class="text-center">
            Application Status
        </th>
        <th class="hidden-md-up hidden-xs-up"></th>
        <th class="hidden-md-up hidden-xs-up"></th>
        <th class="hidden-md-up hidden-xs-up"></th>
    </tr>
    <tr class="text-center">
        <td>
            Harbour Centre
        </td>
        <td>
            Enter application description here.
        </td>
        <td>
            https://harbourcentre.com
        </td>
        <td>
            <span class="badge badge-success">Active</span>
        </td>
        <td>
            @Html.ActionLink("Edit", "EditUser", null, new { @class = "btn btn-info btn-sm" })
        </td>
        <td>
            @Html.ActionLink("Details", "UserDetails", null, new { @class = "btn btn-secondary text-muted btn-sm" })
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteUser", null, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
</table>