@{
    ViewBag.Title = "Edit Notification";
}

@Html.Partial("~/Views/Sidebar/_Sidebar-top.cshtml")

<h1 class="display-4 text-center pb-3">@ViewBag.Title</h1>

<ol class="breadcrumb bg-faded">
    <li class="breadcrumb-item"><a href="~/Dashboard/Dashboard" class="link-color">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="~/Notification/Index" class="link-color">Notifications</a></li>
    <li class="breadcrumb-item active">Edit Notification</li>
</ol>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group col-md-3">
                <label for="group_name" class="control-label">Application</label>
                <div class="">
                    <select multiple class="form-control" required>
                        <option selected="selected">Task Management App</option>
                        <option>Event Scheduling App</option>
                    </select>
                </div>
            </div>

            <div class="form-group col-md-3">
                <label for="group_name" class="control-label">Notification Type</label>
                <div class="">
                    <select multiple class="form-control" required>
                        <option>Incident</option>
                        <option selected="selected">Maintainance</option>
                    </select>
                </div>
            </div>

            <div class="form-group col-md-3">
                <label for="group_name" class="control-label">Level of Impact</label>
                <div class="">
                    <select multiple class="form-control" required>
                        <option selected="selected">Service Impacting</option>
                        <option>No Service Impact</option>
                        <option>Loss of Redundancy</option>
                        <option>Full Service Outage</option>
                    </select>
                </div>
            </div>

            <div class="form-group col-md-3">
                <label for="group_name" class="control-label">Status</label>
                <div class="">
                    <select multiple class="form-control" required>
                        <option selected="selected">Ongoing</option>
                        <option>Complete</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="first_name" class="control-label">Heading</label>
            <div class="">
                <input type="text" class="form-control" placeholder="Enter heading" value="Upcoming Maintainance Notice - May 2" required />
            </div>
        </div>

        <div class="form-group">
            <label for="last_name" class="control-label">Notification Description</label>
            <div class="">
                <textarea>
                    To increase overall redundancy and ensure the least impact on your services, all maintenance will be performed between 11 PM and 4 AM PST. We are not expecting more than 15 minutes of degraded service during the maintenance.&#10; 
                    We appreciate your patience and understanding as we continue to bring enhancements to our network and improve your experience. 
                </textarea>
            </div>
            <script>
                $(function () {
                    $('textarea').froalaEditor({
                        toolbarButtons: ['bold', 'italic', 'underline', 'insertLink', 'formatOL', 'formatUL']
                    });
                });
            </script>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="first_name" class="control-label">Start Date</label>
                <div class="">
                    <input type="datetime-local" class="form-control" value="2017-05-01T23:00:00" required />
                </div>
            </div>

            <div class="form-group col-md-6">
                <label for="first_name" class="control-label">End Date</label>
                <div class="">
                    <input type="datetime-local" class="form-control" value="2017-05-02T04:00:00" required />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="">
                <input type="submit" value="Update" class="btn btn-success" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}

@*<script src="~/Scripts/jquery-3.1.1.min.js"></script>*@
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>