@model IEnumerable<NotificationPortal.ViewModels.ClientVM>

@{
    ViewBag.Title = "Clients";
}

<h1 class="display-4 text-center pb-3">@ViewBag.Title</h1>

<ol class="breadcrumb bg-faded">
    <li class="breadcrumb-item"><a href="~/Home/Dashboard" class="link-color">Home</a></li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form class="form-inline pb-3" method="get" action="~/User/Search">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" name="name" />
                <input class="btn btn-secondary" type="submit" value="Search" />
            </form>
        </div>
        <div class="offset-md-4 col-md-2">
            <div class="float-create">
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>

    @if (TempData["SuccessMsg"] != null)
    {
        <p class="alert alert-success offset-md-3 col-md-6 offset-md-3">
            @Html.Raw(TempData["SuccessMsg"])
        </p>
    }

    <table class="table table-bordered" style="position:relative;">
        <tr class="bg-inverse text-white text-center">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.StatusName)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="text-center clickable-row" id="@item.ClientID" data-href="/Details/@item.ClientID">
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    <span class="">@Html.DisplayFor(modelItem => item.StatusName)</span>
                </td>
            </tr>
        }
    </table>
</div>
<div class="hidden-menu">
    <ul>
        <li><a href="/Edit/" class="btn btn-sm">Edit</a></li>
        <li><a href="/Delete/" class="btn btn-sm">Delete</a></li>
    </ul>
</div>

