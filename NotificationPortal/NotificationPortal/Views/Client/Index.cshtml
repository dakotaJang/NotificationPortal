@model IEnumerable<NotificationPortal.ViewModels.ClientVM>

@{
    ViewBag.Title = "Clients";
}

<h1 class="display-4 text-center pb-3">@ViewBag.Title</h1>

<ol class="breadcrumb bg-faded">
    <li class="breadcrumb-item"><a href="~/Home/Dashboard" class="link-color">Home</a></li>
    <li class="breadcrumb-item active">Clients</li>
</ol>

<div class="row">
    <div class="col-md-2">
        <p>
            @Html.ActionLink("Create New", "Add", null, new { @class = "btn btn-primary btn-lg" })
        </p>
    </div>

    <div class="offset-md-4 col-md-6">
        <div style="float: right">
            <form class="form-inline pb-3" method="get" action="~/Client/Search">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" name="name" />
                <input class="btn btn-secondary" type="submit" value="Search" />
            </form>
        </div>
    </div>
</div>
<p>
    @Html.Raw(ViewBag.ActionMsg)
</p>
<table class="table table-bordered" style="position:relative;">
    <tr class="bg-inverse text-white text-center">
        <th class="text-center">
            @Html.DisplayNameFor(model => model.ClientName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.StatusName)
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr class="text-center clickable-row" id="@item.ClientID" data-href="/Client/Details/@item.ClientID">
        <td>
            @Html.DisplayFor(modelItem => item.ClientName)
        </td>
        <td>
            <span class="">@Html.DisplayFor(modelItem => item.StatusName)</span>
        </td>
    </tr>
}
</table>
<div class="hidden-menu">
    <ul>
        <li><a href="~/Client/Edit/" class="btn btn-sm">Edit</a></li>
        <li><a href="~/Client/Delete/" class="btn btn-sm">Delete</a></li>
    </ul>
</div>
<!-- for right click-->
<script src="~/Scripts/script.js" type="text/javascript"></script>