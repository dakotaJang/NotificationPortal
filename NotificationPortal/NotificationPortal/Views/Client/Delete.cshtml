@model NotificationPortal.ViewModels.ClientVM

@{
    ViewBag.Title = "Delete Client";
}

<h1 class="text-center display-4 pb-3">@ViewBag.Title</h1>

<ol class="breadcrumb bg-faded">
    <li class="breadcrumb-item"><a href="~/Dashboard/Index" class="link-color">Home</a></li>
    <li class="breadcrumb-item"><a href="~/Client/Index">Clients</a></li>
    <li class="breadcrumb-item active">@Html.DisplayFor(model => model.ClientName)</li>
</ol>

<div class="container">
    <h3 class="text-danger pb-2">Are you sure you want to delete this client?</h3>

    @if (TempData["ErrorMsg"] != null)
    {
        <p class="alert alert-danger">
            @Html.Raw(TempData["ErrorMsg"])
        </p>
    }

    <div>
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClientName)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClientName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StatusName)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StatusName)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ReferenceID)
            @Html.HiddenFor(model => model.ClientName)
            @Html.HiddenFor(model => model.StatusID)
            @Html.HiddenFor(model => model.StatusName)

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-success" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>
