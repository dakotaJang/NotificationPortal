@model NotificationPortal.ViewModels.ServerDeleteVM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center display-4 pb-3">@ViewBag.Title</h1>

<ol class="breadcrumb bg-faded">
    <li class="breadcrumb-item"><a href="~/Dashboard/Index" class="link-color">Home</a></li>
    <li class="breadcrumb-item"><a href="~/Client/Index">Clients</a></li>
    <li class="breadcrumb-item active">@Html.DisplayFor(model => model.ServerName)</li>
</ol>

<div class="container">
    <h3 class="text-danger pb-2">Are you sure you want to delete this server?</h3>

    @if (TempData["ErrorMsg"] != null)
    {
        <p class="alert alert-danger">
            @Html.Raw(TempData["ErrorMsg"])
        </p>
    }
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ServerName)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ServerName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LocationID)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LocationID)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ServerTypeID)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ServerTypeID)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StatusID)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StatusID)
            </dd>

        </dl>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ReferenceID)
            @Html.HiddenFor(model => model.LocationID)
            @Html.HiddenFor(model => model.Description)
            @Html.HiddenFor(model => model.StatusID)
            @Html.HiddenFor(model => model.ServerName)
            @Html.HiddenFor(model => model.ServerTypeID)

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-success" />
                @Html.ActionLink("Back", "Index", null, new {@class ="btn btn-danger"})
            </div>
        }
    </div>
    </div>
