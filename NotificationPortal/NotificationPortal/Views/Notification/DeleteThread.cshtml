@{
    ViewBag.Title = "Delete Notification";
}

<h1 class="display-4 text-center pb-3">@ViewBag.Title</h1>

<ol class="breadcrumb bg-faded">
    <li class="breadcrumb-item"><a href="~/Dashboard/Index" class="link-color">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="~/Notification/Index" class="link-color">Notifications</a></li>
    <li class="breadcrumb-item active">Delete Notification</li>
</ol>

<h3 class="pb-3 text-danger">Are you sure you want to delete this notification?</h3>

<div class="container">
    <dl class="row">
        <dt class="col-sm-2">Client Name</dt>
        <dd class="col-sm-10">National Bank</dd>

        <dt class="col-sm-2">Applicaion Name</dt>
        <dd class="col-sm-10">Task Management App</dd>

        <dt class="col-sm-2">Level of Impact</dt>
        <dd class="col-sm-10">Service Impacting</dd>

        <dt class="col-sm-2">Lastest Notification</dt>
        <dd class="col-sm-10">Server down unexpectly, estimated down time: 8 hours</dd>

        <dt class="col-sm-2">Notification Type</dt>
        <dd class="col-sm-10">Incident</dd>

        <dt class="col-sm-2">Sent Date</dt>
        <dd class="col-sm-10">2017/04/20 12:39PM</dd>
    </dl>
</div>

<div>
    <input type="submit" value="Delete" class="btn btn-warning" />
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
</div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
