@model NotificationPortal.ViewModels.ApplicationVM

@{
    ViewBag.Title = "Delete";
}

<h1 class="text-center display-4 pb-3">@Model.ApplicationName</h1>

<ol class="breadcrumb bg-faded">
    <li class="breadcrumb-item"><a href="~/Dashboard/Index" class="link-color">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="~/Application/Index" class="link-color">Applications</a></li>
    <li class="breadcrumb-item active">@Html.DisplayFor(model => model.ApplicationName)</li>
</ol>


<div class="container">
    <h4 class="text-danger pb-2">Are you sure you want to delete this?</h4>

    @if (TempData["ErrorMsg"] != null)
    {
        <p class="alert alert-danger">
            @Html.Raw(TempData["ErrorMsg"])
        </p>
    }

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#Applications" role="tab">Application</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane active" id="User" role="tabpanel">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ApplicationName)
                    </dt>

                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ApplicationName)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.URL)
                    </dt>

                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.URL)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatusName)
                    </dt>

                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatusName)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ClientName)
                    </dt>

                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ClientName)
                    </dd>

                </dl>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ReferenceID)
            @Html.HiddenFor(model => model.ApplicationName)
            @Html.HiddenFor(model => model.ClientRefID)
            @Html.HiddenFor(model => model.Description)
            @Html.HiddenFor(model => model.URL)
            @Html.HiddenFor(model => model.StatusID)
            @Html.HiddenFor(model => model.ClientName)
            @Html.HiddenFor(model => model.ClientRefID)

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-mint text-white" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
            </div>
        }
</div>
